<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application Form"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="13dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/appform"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/b_submitform"
        android:isScrollContainer="false"
        android:layout_below="@+id/appform"
        >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section A :Personal Information"
            android:layout_centerHorizontal="true"
            android:id="@+id/nt_pi"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorAccent"
            />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/elem1"
        android:layout_below="@+id/nt_pi"
        >
        <EditText android:id="@+id/et_apply_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Name*" />

    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/elem2"
            android:layout_below="@+id/elem1"

            >
            <EditText android:id="@+id/et_apply_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Email*" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/elem3"
            android:layout_below="@+id/elem2"

            >
            <EditText android:id="@+id/et_apply_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Mobile No*" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/elem4"
            android:layout_below="@+id/elem3"

            >
            <EditText android:id="@+id/et_apply_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Father's Name*" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/elem5"
            android:layout_below="@+id/elem4"

            >
            <EditText android:id="@+id/et_apply_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Date of Birth*" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/elem6"
            android:layout_below="@+id/elem5"

            >
            <EditText android:id="@+id/et_apply_postaladd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Postal Address*" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section B : Education"
            android:layout_centerHorizontal="true"
            android:id="@+id/nt_edu"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/elem6"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/elem7"
            android:layout_below="@+id/nt_edu"

            >
            <EditText android:id="@+id/et_apply_eduqual1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="1.Percentage/CGPA in 10th*" />
    </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/elem7_1"
            android:layout_below="@+id/elem7"

            >
            <EditText android:id="@+id/et_apply_eduqua2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="2.Percentage/CGPA in 12th*" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/elem7_2"
            android:layout_below="@+id/elem7_1"

            >
            <EditText android:id="@+id/et_apply_eduqual3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="3.Percentage/CGPA in Graduation*" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/elem7_3"
            android:layout_below="@+id/elem7_2"

            >
            <EditText android:id="@+id/et_apply_eduqual4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="4.Percentage/CGPA in Post-Graduation" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section C : Extra Curricular Activities"
            android:layout_centerHorizontal="true"
            android:id="@+id/nt_extracurr"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/elem7_3"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/elem8"
            android:layout_below="@+id/nt_extracurr"

            >

            <EditText android:id="@+id/et_apply_extracurr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="1." />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/elem8_1"
            android:layout_below="@+id/elem8"

            >

            <EditText android:id="@+id/et_apply_extracurr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="2." />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section D : Work Experience"
            android:layout_centerHorizontal="true"
            android:id="@+id/nt_workexp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/elem8_1"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/elem9"
            android:layout_below="@+id/nt_workexp"

            >
            <EditText android:id="@+id/et_apply_workexp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Work Experience 1:" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/elem9_1"
            android:layout_below="@+id/elem9"

            >
            <EditText android:id="@+id/et_apply_workexp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Work Experience 2:" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section E : Achievements"
            android:layout_centerHorizontal="true"
            android:id="@+id/nt_ach"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/elem9_1"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/elem10"
            android:layout_below="@+id/nt_ach"

            >
            <EditText android:id="@+id/et_apply_achievement1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Achievement 1:" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/elem10_1"
            android:layout_below="@+id/elem10"

            >
            <EditText android:id="@+id/et_apply_achievement2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Achievement 2:" />

        </android.support.design.widget.TextInputLayout>




    </RelativeLayout>
    </ScrollView>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/b_submitform"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custombutton"
        android:textSize="20sp"
        android:textColor="@color/white1"

        />

</RelativeLayout>